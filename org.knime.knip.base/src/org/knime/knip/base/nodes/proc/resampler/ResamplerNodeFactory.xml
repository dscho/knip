<!DOCTYPE knimeNode PUBLIC "-//UNIKN//DTD KNIME Node 2.0//EN" "http://www.knime.org/Node.dtd">
<knimeNode icon="resampler.png" type="Manipulator">
	<name>Resampler</name>
	<shortDescription>
		Resizes the image.
	</shortDescription>

	<fullDescription>
		<intro>Resizes the image in each dimension according to given new
			sizes
		</intro>
		<tab name="Options">
			<option name="New dimensions">
				The new size of the images per dimension
		</option>
			<option name="Interpolation Mode">
				Determines how to interpolate the pixels.
			</option>

		</tab>

	</fullDescription>

	<ports>
		<inPort index="0" name="Images">Images</inPort>
		<outPort index="0" name="Resampled Image">Resampled Image</outPort>
	</ports>
</knimeNode>